<Grid xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BTNodeEditor.Editors.Controls.FlyoutCodeViewer">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Grid>
				<Button HorizontalAlignment="Right" Width="10" Height="10" Background="Red" Name="CloseBtn">x</Button>
			</Grid>
			<ScrollViewer Grid.Row="1">
				<TextBlock FontSize="8" FontFamily="Sarasa Mono CL" Name="CodePresenter"/>
			</ScrollViewer>
		</Grid>
</Grid>
